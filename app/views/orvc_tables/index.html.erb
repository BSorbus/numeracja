<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12">
      <h4 class="center">
        <span class="index-title hidden-xs"><%= t '.title' %></span>
        <span class="index-title visible-xs"><%= t '.navbar' %></span>
      </h4>
    </div> <!--/col-sm-12 -->
  </div> <!--/row -->
</div> <!--/container -->

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12">
      <table id="orvc_tables-datatable" class="hover cell-border" cellspacing="0" width="100%", 
        data-source="<%= orvc_tables_path(format: :json) %>", 
        data-locale_url="<%= datatables_lang_path(format: :json) %>", 
        data-export_csv_url="<%= export_orvc_tables_path(format: :csv) %>",
        data-export_xml_url="<%= export_orvc_tables_path(format: :xml) %>">
        <thead>
          <tr>
            <th>id</th>
            <th><%= OrvcTable.human_attribute_name(:phone_number) %></th>
            <th><%= OrvcTable.human_attribute_name(:date_added) %></th>
            <th><%= OrvcTable.human_attribute_name(:date_deletion) %></th>
            <th><%= OrvcTable.human_attribute_name(:modification) %></th>
          </tr>
        </thead>

        <tfoot style='display: none;'>
          <tr>
            <th></th> <!-- 0 id -->
            <th> <!-- 1 phone_number -->
              <%= text_field_tag :col1filter, params[:col1filter], id: 'col1filter', 'data-column' => "1", 
                    class: 'column_filter form-control input-sm', style: "width: 85%;" %>
            </th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </tfoot>

        <tbody>
           <!--data from JSON -->
        </tbody>
      </table>
    </div> <!--/col-sm-12 -->
  </div> <!--/row -->

</div> <!--/container -->

