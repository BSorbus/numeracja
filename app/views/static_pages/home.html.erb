<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1 class="center">
        <span class="index-title"><%= t '.title' %></span>
      </h1>
    </div> <!--/col-sm-12 -->
  </div> <!--/row -->

  <br>

  <div class="row">
    <div class="col-sm-7">

      <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
          <li data-target="#carousel-example-generic" data-slide-to="1"></li>
          <li data-target="#carousel-example-generic" data-slide-to="2"></li>
          <li data-target="#carousel-example-generic" data-slide-to="3"></li>
          <li data-target="#carousel-example-generic" data-slide-to="4"></li>
          <li data-target="#carousel-example-generic" data-slide-to="5"></li>
          <li data-target="#carousel-example-generic" data-slide-to="6"></li>
          <li data-target="#carousel-example-generic" data-slide-to="7"></li>
          <li data-target="#carousel-example-generic" data-slide-to="8"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
          <!-- data-slide-to="0" -->
          <div class="item active">
            <%= image_tag("0.jpg") %>
            <div class="carousel-caption">
              <%= link_to pstn_tables_path do %>
                <span class="btn btn-primary btn-lg"><%= t("pstn_tables.index.navbar") %></span>
              <% end %>
              <br>
              <h4><%= t("pstn_tables.index.title_primary") %></h4>
            </div>
          </div>
          <!-- data-slide-to="1" -->
          <div class="item">
            <%= image_tag("1024X512.png") %>
            <div class="carousel-caption">
              <%= link_to plmn_tables_path do %>
                <span class="btn btn-primary btn-lg"><%= t("plmn_tables.index.navbar") %></span>
              <% end %>
              <%= link_to mnc_tables_path do %>
                <span class="btn btn-primary btn-lg"><%= t("mnc_tables.index.navbar") %></span>
              <% end %>
              <br>
              <h4><%= t("plmn_mnc.index.title_primary") %></h4>
            </div>
          </div>
          <!-- data-slide-to="2" -->
          <div class="item">
            <%= image_tag("1024X512.png") %>
            <div class="carousel-caption">
              <%= link_to ndsi_tables_path do %>
                <span class="btn btn-primary btn-lg"><%= t("ndsi_tables.index.navbar") %></span>
              <% end %>
              <br>
              <h4><%= t("ndsi_tables.index.title_primary") %></h4>
            </div>
          </div>
          <!-- data-slide-to="3" -->
          <div class="item">
            <%= image_tag("1024X512.png") %>
            <div class="carousel-caption">
              <%= link_to aus_tables_path do %>
                <span class="btn btn-primary btn-lg"><%= t("aus_tables.index.navbar") %></span>
              <% end %>
              <br>
              <h4><%= t("aus_tables.index.title_primary") %></h4>
            </div>
          </div>
          <!-- data-slide-to="4" -->
          <div class="item">
            <%= image_tag("1024X512.png") %>
            <div class="carousel-caption">
              <%= link_to hesc_tables_path do %>
                <span class="btn btn-primary btn-lg"><%= t("hesc_tables.index.navbar") %></span>
              <% end %>
              <br>
              <h4><%= t("hesc_tables.index.title_primary") %></h4>
            </div>
          </div>
          <!-- data-slide-to="5" -->
          <div class="item">
            <%= image_tag("1024X512.png") %>
            <div class="carousel-caption">
              <%= link_to in_tables_path do %>
                <span class="btn btn-primary btn-lg"><%= t("in_tables.index.navbar") %></span>
              <% end %>
              <br>
              <h4><%= t("in_tables.index.title_primary") %></h4>
            </div>
          </div>
          <!-- data-slide-to="6" -->
          <div class="item">
            <%= image_tag("1024X512.png") %>
            <div class="carousel-caption">
              <%= link_to nds_tables_path do %>
                <span class="btn btn-primary btn-lg"><%= t("nds_tables.index.navbar") %></span>
              <% end %>
              <%= link_to ispc_tables_path do %>
                <span class="btn btn-primary btn-lg"><%= t("ispc_tables.index.navbar") %></span>
              <% end %>
              <%= link_to nspc_tables_path do %>
                <span class="btn btn-primary btn-lg"><%= t("nspc_tables.index.navbar") %></span>
              <% end %>
              <br>
              <h4><%= t("nds_ispc_nspc.index.title_primary") %></h4>
            </div>
          </div>
          <!-- data-slide-to="7" -->
          <div class="item">
            <%= image_tag("1024X512.png") %>
            <div class="carousel-caption">
              <%= link_to voip_tables_path do %>
