<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h3 class="center"><span class="index-title hidden-xs"><%= t '.title_primary' %></span></h3>
      <h4 class="center">
        <span class="index-title hidden-xs"><%= t '.title' %></span>
        <span class="index-title visible-xs"><%= t '.navbar' %></span>
      </h4>
    </div> <!--/col-sm-12 -->
  </div> <!--/row -->
</div> <!--/container -->

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12">
      <table id="pstn_tables-datatable" class="hover cell-border" cellspacing="0" width="100%", 
        data-source="<%= pstn_tables_path(format: :json) %>", 
        data-locale_url="<%= datatables_lang_path(format: :json) %>", 
        data-export_csv_url="<%= export_pstn_tables_path(format: :csv) %>">
        <thead>
          <tr>
            <th>id</th>
            <th><%= PlmnTable.human_attribute_name(:scope) %></th>
            <th><%= PlmnTable.human_attribute_name(:operator) %></th>
            <th><%= PlmnTable.human_attribute_name(:operator_name) %></th>
            <th><%= PlmnTable.human_attribute_name(:zone) %></th>
            <th><%= PlmnTable.human_attribute_name(:zone_name) %></th>
            <th><%= PlmnTable.human_attribute_name(:zone_symbol) %></th>
            <th><%= PlmnTable.human_attribute_name(:numbering_area) %></th>
            <th><%= PlmnTable.human_attribute_name(:change_date) %></th>
          </tr>
        </thead>

        <tbody>
           <!--data from JSON -->
        </tbody>
      </table>
    </div> <!--/col-sm-12 -->
  </div> <!--/row -->

</div> <!--/container -->

